---
/**
 * src/pages/index.astro — Fressia Perfumería (Dark & Gold)
 * Sube a /public:
 *  - /logo-fressia.png         (tu logo en dorado sobre transparente)
 *  - /bg-fressia.jpg           (fondo tipo follaje oscuro – puedes usar tu arte)
 */
const LINKS = {
  kyte: 'https://fressia-perfumeria.kyte.site/es',
  whatsapp: 'https://wa.me/message/ES7WVJHY4MUYB1',
  instagram: 'https://www.instagram.com/fressiaperfumeria?igsh=MXhydG45N2p6Y3RmYg==',
  facebook: 'https://www.facebook.com/share/167JrGAFts/?mibextid=wwXIfr',
  tiktok: 'https://www.tiktok.com/@fressia.perfumeria?_t=ZS-8zjnOz7ox1U&_r=1',
  maps: 'https://maps.app.goo.gl/ZB598vwRSKuRnhf58?g_st=ic',
};
const ADDRESSES = [
  'Calle 22 # 12-35 – Barrio Montoya Pava',
  'Calle 30 # 5-28 – Barrio El Diamante',
];
---

<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Fressia Perfumería & Accesorios</title>
  <meta name="description" content="Réplicas 1.1, perfumes por onzas y colecciones árabes. Joyería, gorras, gafas y camisetas. Granada (Meta) & Villavicencio." />
  <link rel="icon" href="/logo-fressia.png" />
  <style>
    :root{
      --bg:#0a0a0c;
      --bg-2:#111116;
      --text:#ececf1;
      --muted:#a7a7b3;
      --gold:#d4af37;
      --gold-2:#a88928;
      --ring:#22222b;
      --shadow:0 18px 50px rgba(0,0,0,.5);
      --radius:16px;
    }
    *{box-sizing:border-box}
    html,body{margin:0; color:var(--text); font-family:Inter,ui-sans-serif,system-ui,-apple-system,Segoe UI,Roboto,Helvetica,Arial}
    a{color:inherit; text-decoration:none}
    .wrap{
      min-height:100dvh;
      background:
        linear-gradient(180deg, rgba(0,0,0,.55), rgba(0,0,0,.85)),
        url('/bg-fressia.jpg') center/cover no-repeat fixed;
    }
    .container{max-width:1100px;margin:0 auto;padding:24px}

    header.hero{padding:56px 0 28px;}
    .badge{
      display:inline-flex; gap:8px; align-items:center;
      padding:8px 12px; border-radius:999px;
      background:rgba(212,175,55,.10); color:var(--gold);
      border:1px solid rgba(212,175,55,.35); font-weight:600; font-size:12px
    }
    .brand{display:flex; gap:18px; align-items:center; margin-top:10px}
    .brand img{width:64px;height:64px;object-fit:contain; border-radius:12px; filter: drop-shadow(0 6px 20px rgba(0,0,0,.6))}
    h1{font-size:clamp(30px,4.6vw,48px); line-height:1.08; margin:4px 0 10px}
    .lead{color:var(--muted); font-size:clamp(16px,2.2vw,18px)}

    .cta{display:flex; flex-wrap:wrap; gap:12px; margin-top:22px}
    .btn{
      display:inline-flex; gap:10px; align-items:center; font-weight:700;
      padding:14px 18px; border-radius:12px; border:1px solid var(--gold);
      background:linear-gradient(180deg,var(--gold),var(--gold-2)); color:#121212;
      box-shadow:var(--shadow); transition:transform .15s ease, filter .15s ease;
    }
    .btn:hover{transform:translateY(-1px); filter:saturate(1.05)}
    .btn.secondary{
      background:rgba(17,17,22,.55); color:var(--text); border:1px solid var(--ring)
    }
    .btn.secondary:hover{border-color:var(--gold); color:#fff}

    .social{display:flex; gap:10px; margin-top:12px; flex-wrap:wrap}
    .chip{
      display:inline-flex; gap:8px; align-items:center; padding:10px 14px;
      border-radius:12px; background:rgba(15,15,20,.7); border:1px solid var(--ring); color:var(--muted)
    }
    .chip:hover{border-color:var(--gold); color:#fff}

    .grid{display:grid; gap:16px; margin:32px 0; grid-template-columns:repeat(12,1fr)}
    .card{
      grid-column:span 12; background:linear-gradient(180deg,rgba(17,17,22,.85),rgba(10,10,12,.85));
      border:1px solid var(--ring); border-radius:var(--radius); padding:18px; box-shadow:var(--shadow)
    }
    @media(min-width:720px){ .card{grid-column:span 4} }
    .card h3{margin:0 0 6px; font-size:18px}
    .muted{color:var(--muted)}

    .section{padding:8px 0 24px}
    .center{text-align:center}
    .divider{height:1px; background:linear-gradient(90deg, transparent, rgba(212,175,55,.5), transparent); margin:24px 0}

    iframe.catalog{width:100%; height:900px; border:1px solid var(--ring); border-radius:var(--radius); backdrop-filter:blur(3px); background:#0e0e12; box-shadow:var(--shadow)}

    footer{margin:44px 0 24px; color:var(--muted); font-size:14px; text-align:center}
    .addresses{display:flex; gap:10px; flex-wrap:wrap; justify-content:center}
    .addr{padding:10px 14px; border-radius:10px; background:rgba(15,15,20,.7); border:1px solid var(--ring)}
    .vip{
      margin-top:20px; padding:14px 16px; border-radius:14px; text-align:center; color:#111;
      background:linear-gradient(90deg,#a37d15,#e0c159,#a37d15); font-weight:800; letter-spacing:.3px;
      text-transform:uppercase; border:1px solid #e6d48a
    }

    /* Botón flotante de WhatsApp */
    .wa-float{
      position:fixed; right:16px; bottom:16px; z-index:50;
      background:linear-gradient(180deg,var(--gold),var(--gold-2)); color:#111;
      border:1px solid var(--gold-2); border-radius:999px; padding:12px 14px; font-weight:700;
      box-shadow:var(--shadow)
    }
  </style>
</head>
<body>
  <div class="wrap">
    <header class="hero">
      <div class="container">
        <span class="badge">Fressia Perfumería & Accesorios</span>
        <div class="brand">
          <img src="/logo-fressia.png" alt="Fressia Perfumería" />
          <div>
            <h1>Fragancias que se sienten — precios que enamoran</h1>
            <p class="lead">Réplicas 1.1, perfumes por onzas y colecciones árabes. Además, joyería, gorras, gafas y camisetas deportivas.</p>
          </div>
        </div>

        <div class="cta">
          <a class="btn" href={LINKS.kyte} target="_blank" rel="noopener">
            <!-- bolsa -->
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden>
              <path d="M7 7V6a5 5 0 0 1 10 0v1" stroke="currentColor" stroke-width="1.8"/>
              <path d="M5 7h14l-1 12a2 2 0 0 1-2 2H8a2 2 0 0 1-2-2L5 7Z" stroke="currentColor" stroke-width="1.8"/>
            </svg>
            Ver catálogo
          </a>
          <a class="btn secondary" href={LINKS.whatsapp} target="_blank" rel="noopener">
            <!-- whatsapp -->
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" aria-hidden>
              <path d="M20.5 10.5a8.5 8.5 0 1 1-3.02-6.52" stroke="currentColor" stroke-width="1.8"/>
              <path d="M8.5 19.5 5 21l1.5-3.5" stroke="currentColor" stroke-width="1.8"/>
              <path d="M8 8c0 5 8 9 8 6.5 0-.5-.5-1-1.5-1.5" stroke="currentColor" stroke-width="1.8"/>
            </svg>
            Pedir por WhatsApp
          </a>
        </div>

        <div class="social">
          <a class="chip" href={LINKS.instagram} target="_blank" rel="noopener">Instagram</a>
          <a class="chip" href={LINKS.facebook} target="_blank" rel="noopener">Facebook</a>
          <a class="chip" href={LINKS.tiktok} target="_blank" rel="noopener">TikTok</a>
          <a class="chip" href={LINKS.maps} target="_blank" rel="noopener">Cómo llegar (Google Maps)</a>
        </div>

        <div class="divider"></div>

        <div class="addresses">
          {ADDRESSES.map((a) => <span class="addr">{a}</span>)}
        </div>

        <div class="vip">Club de Clientes VIP · Beneficios exclusivos</div>
      </div>
    </header>

    <section class="section">
      <div class="container">
        <div class="grid">
          <div class="card">
            <h3>Réplicas 1.1</h3>
            <p class="muted">Calidad top, aromas duraderos y el mejor precio.</p>
          </div>
          <div class="card">
            <h3>Por onzas</h3>
            <p class="muted">Decants 5/10/30/60/100 ml. ¡Arma tu set favorito!</p>
          </div>
          <div class="card">
            <h3>Accesorios & más</h3>
            <p class="muted">Joyería 18K laminado, gorras premium, gafas y camisetas.</p>
          </div>
        </div>
      </div>
    </section>

    <section class="section">
      <div class="container">
        <h2 class="center">Catálogo en línea</h2>
        <p class="center muted">Si no carga correctamente en tu dispositivo, usa el botón “Ver catálogo”.</p>
        <iframe class="catalog" src={LINKS.kyte} loading="lazy"></iframe>
      </div>
    </section>

    <footer>
      <div class="container">
        <div>© {new Date().getFullYear()} Fressia Perfumería & Accesorios · Granada (Meta) & Villavicencio</div>
        <div class="muted">Atención por WhatsApp · Envíos nacionales</div>
      </div>
    </footer>
  </div>

  <!-- Botón flotante WhatsApp -->
  <a class="wa-float" href={LINKS.whatsapp} target="_blank" rel="noopener">WhatsApp</a>
</body>
</html>


